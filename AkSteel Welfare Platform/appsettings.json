{
  "Application": {
    "Name": "AkSteelWelfarePlatform"
  },
  "ConnectionStrings": {
    //"DefaultConnection": "Server=.;Database=AkSteelWelfarePlatformDb;Trusted_Connection=True;MultipleActiveResultSets=true",
    "DefaultConnection": "Server =.; Database = AkSteelWelfarePlatformDb; User Id = devdb; Password = Fajr@123;TrustServerCertificate=True;MultipleActiveResultSets=true",
    //"DefaultConnection": "Server =.; Database = AkSteelWelfarePlatformDb; User Id = sa; Password = M@har7478;TrustServerCertificate=True;MultipleActiveResultSets=true"
    "Redis": "localhost:6379,abortConnect=false,connectTimeout=30000,ssl=false"
  },
  "Modules": {
    "Enabled": [ "Core", "Auth", "Authorization", "Audit", "Cach", "Notification", "User" ]
  },
  "CacheSettings": {
    "UseRedis": true,
    "DefaultExpirationMinutes": 30,
    "RedisInstanceName": "AkSteel_"
  },
  "Jwt": {
    "Key": "YourVerySecureKeyHere_ChangeThis_Minimum32CharactersLong!",
    "Issuer": "AkSteelWelfarePlatform",
    "Audience": "AkSteelWelfarePlatformUsers",
    "AccessTokenExpiryMinutes": 60,
    "RefreshTokenExpiryDays": 7
  },
  "Cors": {
    "AllowedOrigins": [
      "http://localhost:5173",
      "https://admin.mahar.com"
    ]
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.EntityFrameworkCore": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {CorrelationId} {SourceContext}{NewLine}{Message:lj}{NewLine}{Exception}{NewLine}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "Logs/app-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 30,
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] {CorrelationId} {SourceContext}{NewLine}{Message:lj}{NewLine}{Exception}{NewLine}"
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ]
  },
  "HealthCheck": {
    "Enabled": true,
    "Endpoint": "/health",
    "TimeoutSeconds": 10
  }
}
