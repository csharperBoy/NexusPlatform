{
  "Application": {
    "Name": "AkSteelWelfarePlatform"
  },
  "ConnectionStrings": {
    //"DefaultConnection": "Server=.;Database=AkSteelWelfarePlatformDb;Trusted_Connection=True;MultipleActiveResultSets=true",
    //"DefaultConnection": "Server =.; Database = AkSteelWelfarePlatformDb; User Id = devdb; Password = Fajr@123;TrustServerCertificate=True;MultipleActiveResultSets=true",
    //"DefaultConnection": "Server =.; Database = AkSteelWelfarePlatformDb; User Id = sa; Password = M@har7478;TrustServerCertificate=True;MultipleActiveResultSets=true"
    "DefaultConnection": "Server=PROD_SERVER;Database=AkSteelWelfarePlatformDb;User Id=prod_user;Password=StrongProdPassword123!;TrustServerCertificate=True;MultipleActiveResultSets=true;Connection Timeout=30",
    "Redis": "prod-redis-server:6379,password=RedisProdPassword123!,abortConnect=false,connectTimeout=30000,ssl=true"
  },
  "Modules": {
    "Enabled": [
      {
        "Name": "Core",
        "Order": 1
      },
      {
        "Name": "Auth",
        "Order": 2
      },
      {
        "Name": "Authorization",
        "Order": 3
      },
      {
        "Name": "Audit",
        "Order": 4
      },
      {
        "Name": "Cach",
        "Order": 5
      },
      {
        "Name": "Notification",
        "Order": 6
      },
      {
        "Name": "User",
        "Order": 7
      }
    ]
  },

  "Resilience": {
    "Policies": {
      "DefaultRetry": {
        "Type": "Retry",
        "Retries": 3,
        "BaseDelaySeconds": 2,
        "Jitter": true
      },
      "DbRetry": {
        "Type": "Retry",
        "Retries": 5,
        "BaseDelaySeconds": 1,
        "Handle": "SqlException",
        "Jitter": true
      },
      "SmtpBreaker": {
        "Type": "CircuitBreaker",
        "Failures": 5,
        "BreakDurationSeconds": 60
      },
      "ExternalTimeout": {
        "Type": "Timeout",
        "TimeoutSeconds": 10
      }
    }
  },

  "CacheSettings": {
    "UseRedis": true,
    "DefaultExpirationMinutes": 60,
    "RedisInstanceName": "AkSteel_Prod_"
  },
  "Jwt": {
    "Key": "VeryStrongProductionKey_Minimum64CharactersLong_ChangeThisInProductionEnvironment!",
    "Issuer": "AkSteelWelfarePlatform",
    "Audience": "AkSteelWelfarePlatformUsers",
    "AccessTokenExpiryMinutes": 30,
    "RefreshTokenExpiryDays": 7
  },
  "Cors": {
    "AllowedOrigins": [
      "https://admin.mahar.com",
      "https://app.mahar.com"
    ]
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.EntityFrameworkCore": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "/var/log/aksteel/app-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 90,
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] {CorrelationId} {SourceContext}{NewLine}{Message:lj}{NewLine}{Exception}{NewLine}"
        }
      },
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {CorrelationId} {SourceContext}{NewLine}{Message:lj}{NewLine}{Exception}{NewLine}"
        }
      }
    ]
  },
  "HealthCheck": {
    "Enabled": true,
    "Endpoint": "/health",
    "TimeoutSeconds": 10
  }
}
